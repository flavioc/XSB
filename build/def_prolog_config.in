#ifdef WIN_NT
#define FILE_NL(File)	      file_put(File, 13), file_put(File, 10)
#define NL	    	      put(13), put(10)
#else
#define FILE_NL(File)	      file_put(File, 10)
#define NL	    	      put(10)
#endif

/* We use characters here because CPP lets us only do '\\', while XSB
   interprets this as double backslash */
#ifdef WIN_NT
#define CH_OS_SLASH 	      92	/*  \     */
#else
#define CH_OS_SLASH    	      47    	/*  /     */
#endif

#ifdef DJGPP  /* DOS */
#define XSB_OBJFILE_EXTENSION	 '.OX'
else  /* Unix, NT */
#define XSB_OBJFILE_EXTENSION	 '.O'
#endif


/* architecture is something like i386-pc-linux or sparc-sun-solaris5.2 */
#define XSB_ARCHITECTURE    	 '@canonical@'

/* <architecture>-<config-tag>, e.g., i386-pc-linux-dbg */
#define XSB_CONFIGURATION    	 '@full_config_name@'

#define COMPILER		 '@CC@'
