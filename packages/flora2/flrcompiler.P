insert_rule_signature_struct(Head,Body,Code) :-
        insert_rulesig_struct(Head,Body,NULL,CCode),
        query_struct(CCode,Code).

insert_rule_signature_struct(HeadList,Body,Newpred,Code) :-
        list_struct(HeadList,[],HeadListCode),
        insert_rulesig_struct(HeadListCode,Body,Newpred,CCode),
