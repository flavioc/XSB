/*****************************************************************************
  rules for flattened path expressions on RHS
*****************************************************************************/
STD_FPREFIX(fd_rhs)(O,M,R)   :- STD_FPREFIX(fd)(O,M,R).
STD_FPREFIX(mvd_rhs)(O,M,R)  :- STD_FPREFIX(mvd)(O,M,R).
STD_FPREFIX(ifd_rhs)(O,M,R)  :- STD_FPREFIX(ifd)(O,M,R).
