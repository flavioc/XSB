:- export check_rule/1, dlrule_to_cdf/2.

:- import allAttr/3, hasAttr/3, 
	   isa/2, maxAttr/4, minAttr/4,
	   cdf_id_fields/4 from cdf_init_cdf.
:- import cdf_warning/2 from cdf_exceptions.
