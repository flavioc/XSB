:- dynamic node/3.
:- dynamic edge/2.

% justification_root(+Q, -RootNode)
% ---- Evaluates query Q and returns the rootnode of the tree.

justification_root(Q, TV, Root) :-
	justify(Q, TV, Root), close_open_tables, !.
%	node(RootNodeId, Q, TV),
%	RootNode = node(RootNodeId, Q, TV).

justification_root1(Q, TV, Root, H) :-
        justify1(Q, TV, Root, H), close_open_tables, !.                                 

get_child(NodeId, Child) :- 
	arc(NodeId, CId),
	node(CId, G, TV),
	( (show(G) ; (allowed(G), \+ single_child(CId)))
		-> Child = node(CId, G, TV)
	;  \+ builtin(G)
		-> get_child(CId, Child)
	).

get_children(NodeId, Children) :- 
	setof(C, get_child(NodeId, C), Children).

single_child(NId) :- get_children(NId, [_1child]).

arc(S, D) :- edge(S, Cs), member(D, Cs).

