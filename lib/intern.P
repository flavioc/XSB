/* builtin calls */
i_trie_intern(_Term,_Root,_Leaf,_Flag) :- '_$builtin'(160).
i_trie_interned(_Term,_Root,_Leaf) :- '_$builtin'(161).
trie_dispose(_Root,_Leaf) :- '_$builtin'(162).
