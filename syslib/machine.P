conname(Con, Name) :-
	term_type(Con, Type),
	( Type =:= CS -> term_psc(Con, Psc), psc_name(Psc, Name)
	; Type =:= STRING -> Name = Con
	).

conpsc(Con, Psc) :-
	term_type(Con, Type),
	( Type =:= CS -> term_psc(Con, Psc)
	; Type =:= STRING -> psc_insert(Con, 0, Psc, 0)
	).

machine_file_exists(File) :- 
	sys_syscall(SYS_access, Res, File, 0), Res =:= 0.

